<p style="color: green"><%= notice %></p>
<div class="container">

  <h1>Posts</h1>
  <br>

  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
      <br>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path %>
</div>
